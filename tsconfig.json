{
    "compilerOptions": {
        "module": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "./lib/",
        "target": "es6",
        "sourceMap": true,
        "declaration": true,
        "allowJs": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        ".git",
        "node_modules"
    ]
}